<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@drawable/widget_background">

    <!-- Title -->
    <TextView
        android:id="@+id/widget_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pinned_notes_title"
        android:textSize="12sp"
        android:textColor="@color/widget_text_primary"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <!-- Pinned Notes Grid (2x2) -->
    <GridLayout
        android:id="@+id/pinned_notes_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:layout_gravity="fill_horizontal">

        <!-- Note 1 (Top Left) -->
        <FrameLayout
            android:id="@+id/note_1_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:layout_column="0"
            android:background="@drawable/widget_background"
            android:padding="8dp"
            android:layout_margin="4dp"
            android:minHeight="80dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/note_1_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/untitled_note"
                        android:textSize="11sp"
                        android:textColor="@color/widget_text_primary"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:ellipsize="end" />

                    <ImageView
                        android:id="@+id/note_1_pin"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_pin"
                        android:contentDescription="@string/pinned_note_icon"
                        android:visibility="gone" />
                </LinearLayout>

                <TextView
                    android:id="@+id/note_1_preview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tap_to_view"
                    android:textSize="9sp"
                    android:textColor="@color/widget_text_secondary"
                    android:layout_marginTop="4dp"
                    android:maxLines="2"
                    android:ellipsize="end" />
            </LinearLayout>
        </FrameLayout>

        <!-- Note 2 (Top Right) -->
        <FrameLayout
            android:id="@+id/note_2_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:layout_column="1"
            android:background="@drawable/widget_background"
            android:padding="8dp"
            android:layout_margin="4dp"
            android:minHeight="80dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/note_2_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/untitled_note"
                        android:textSize="11sp"
                        android:textColor="@color/widget_text_primary"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:ellipsize="end" />

                    <ImageView
                        android:id="@+id/note_2_pin"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_pin"
                        android:contentDescription="@string/pinned_note_icon"
                        android:visibility="gone" />
                </LinearLayout>

                <TextView
                    android:id="@+id/note_2_preview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tap_to_view"
                    android:textSize="9sp"
                    android:textColor="@color/widget_text_secondary"
                    android:layout_marginTop="4dp"
                    android:maxLines="2"
                    android:ellipsize="end" />
            </LinearLayout>
        </FrameLayout>

        <!-- Note 3 (Bottom Left) -->
        <FrameLayout
            android:id="@+id/note_3_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:layout_column="0"
            android:background="@drawable/widget_background"
            android:padding="8dp"
            android:layout_margin="4dp"
            android:minHeight="80dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/note_3_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/untitled_note"
                        android:textSize="11sp"
                        android:textColor="@color/widget_text_primary"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:ellipsize="end" />

                    <ImageView
                        android:id="@+id/note_3_pin"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_pin"
                        android:contentDescription="@string/pinned_note_icon"
                        android:visibility="gone" />
                </LinearLayout>

                <TextView
                    android:id="@+id/note_3_preview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tap_to_view"
                    android:textSize="9sp"
                    android:textColor="@color/widget_text_secondary"
                    android:layout_marginTop="4dp"
                    android:maxLines="2"
                    android:ellipsize="end" />
            </LinearLayout>
        </FrameLayout>

        <!-- Note 4 (Bottom Right) -->
        <FrameLayout
            android:id="@+id/note_4_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:layout_column="1"
            android:background="@drawable/widget_background"
            android:padding="8dp"
            android:layout_margin="4dp"
            android:minHeight="80dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/note_4_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/untitled_note"
                        android:textSize="11sp"
                        android:textColor="@color/widget_text_primary"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:ellipsize="end" />

                    <ImageView
                        android:id="@+id/note_4_pin"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_pin"
                        android:contentDescription="@string/pinned_note_icon"
                        android:visibility="gone" />
                </LinearLayout>

                <TextView
                    android:id="@+id/note_4_preview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tap_to_view"
                    android:textSize="9sp"
                    android:textColor="@color/widget_text_secondary"
                    android:layout_marginTop="4dp"
                    android:maxLines="2"
                    android:ellipsize="end" />
            </LinearLayout>
        </FrameLayout>
    </GridLayout>

    <!-- Empty State -->
    <TextView
        android:id="@+id/empty_state_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/no_pinned_notes"
        android:textSize="10sp"
        android:textColor="@color/widget_text_secondary"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="16dp"
        android:visibility="gone" />

</LinearLayout>
