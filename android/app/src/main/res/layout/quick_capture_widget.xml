<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@drawable/widget_background">

    <!-- Title -->
    <TextView
        android:id="@+id/widget_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/quick_capture_title"
        android:textSize="12sp"
        android:textColor="@color/widget_text_primary"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="4dp" />

    <!-- Capture Button -->
    <FrameLayout
        android:id="@+id/capture_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/capture_button_background">

        <ImageView
            android:id="@+id/capture_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_add"
            android:contentDescription="@string/quick_capture_title" />
    </FrameLayout>

    <!-- Note Count Text -->
    <TextView
        android:id="@+id/note_count_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tap_to_capture"
        android:textSize="10sp"
        android:textColor="@color/widget_text_secondary"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:maxLines="1"
        android:ellipsize="end" />

</LinearLayout>
